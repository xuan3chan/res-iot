{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "api-client",
    "sourceRoot": "libs/api-client/src",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "libs/api-client/**/*.ts"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/libs/api-client"
            ],
            "options": {
                "jestConfig": "libs/api-client/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": [
        "api-client",
        "shared"
    ]
}